@using EstateAgency.Entities;
@using EstateAgency.Database;

@{
    Layout = "_Basic";
    ViewData["Title"] = "New house";
}

<h2>New house</h2>
<form asp-action="Post_Stage2" method="post">
    <input type="hidden" name="location" value="@ViewData["location"]" />
    <input type="hidden" name="variant" value="@ViewData["variant"]" />

    <label>Назва вулиці:</label>
    <input name="streetname" type="text" maxlength="64" placeholder="Приклад: проспект Соборний" />

    <label>Номер будинку:</label>
    <input name="housenumber" type="text" maxlength="5" style="width: 8em;" />

    <label>Площа земельної ділянки:</label>
    <input name="landarea" type="text" maxlength="7" style="width: 8em;" />

    <label>Площа будинку:</label>
    <input name="homearea" type="text" maxlength="7" style="width: 8em;" />

    <label>Кількість поверхів:</label>
    <input name="floorcount" type="text" maxlength="2" style="width: 8em;" />

    <label>Кількість кімнат:</label>
    <input name="roomcount" type="text" maxlength="2" style="width: 8em;" />

    <label>Опис об'єкта:</label>
    <textarea name="description"></textarea>

    <span>Ціна:</span>
    <input type="text" maxlength="7" name="price" style="display: inline; width: 8em;" />

    <label>Теги:</label>
    <textarea name="tags" placeholder="Enter tags here, ex.: water, gas, electricity"></textarea>
    <br/>
    <br/>
    <button type="submit">Завершити</button>
</form>
